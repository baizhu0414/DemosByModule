<?xml version="1.0" encoding="utf-8"?>
<set xmlns:Android="http://schemas.android.com/apk/res/android">
    <!--
    //动画对象的起始X坐标
     //动画对象的结束X坐标
     //这里是横向移动，所以Y坐标无需改变，始终是0
     //动画时间2s
      -->
    <translate
        Android:duration="500"
        Android:fromXDelta="-100%p"
        Android:fromYDelta="0"
        Android:toXDelta="0"
        Android:toYDelta="0" />

</set>
